@page
@model Oblig3.Pages.Grades.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Grade1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].CoursecodeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Student)
            </th>
            <th></th>
        </tr>
        <tr>
            <th>
               <form asp-action="Index" method="get">
                   <select asp-for="FilterGrade" asp-items="@(new SelectList(new [] {"A", "B", "C", "D", "E", "F"}))">
                   </select>
                   <button type="submit">Filter</button>
               </form>
            </th>
            <th>
                <form asp-action="IndexMultiSelect" method="get">
                    <select asp-for="FilterCourseName" asp-items = "@(new SelectList(Model.Course).Distinct())" >
                    </select>
                    <button type="submit">Filter</button>
                </form>
            </th>
            <th>
                <form>
                    <input type="text" asp-for="SearchGrade" placeholder="Filter Student by Grade" />
                    <input type="submit" value="Search" />
                </form>
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grade) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoursecodeNavigation.Coursecode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Student.Id" asp-route-course="@item.CoursecodeNavigation.Coursecode">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Student.Id" asp-route-course="@item.CoursecodeNavigation.Coursecode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
